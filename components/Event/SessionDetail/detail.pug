div#modal-session(uk-modal)
  div.detail-innter.uk-modal-dialog.uk-modal-body
    a.uk-modal-close-default(uk-close)
    div.talk-schedule
      time {{ dates }}
      span.event-type ({{ talk_format }})
      span.room {{ room }}
    dl.talk-property.uk-flex.uk-flex-wrap
      dt.talk-langage {{ $t('event.conference.sessionDetail.talkLanguage') }} :
      dd {{ language }}
      dt.doc-langage {{ $t('event.conference.sessionDetail.slideLanguage') }} :
      dd {{ slide_language }}
      dt.talk-level {{ $t('event.conference.sessionDetail.audience') }} :
      dd {{ level }}
    h3.uk-modal-title {{ title }}
    p {{ abstract }}
    h4.name {{ name }}
    p.profile {{ profile }}
    h4 {{ $t('event.conference.sessionDetail.description') }}
    p.desc {{ description }}
    h4.keyword(v-if="tags") keywords
    ul.tag.uk-flex.uk-flex-wrap
      li( v-for="item in tags") {{ item }}
