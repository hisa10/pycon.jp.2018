                    ul.uk-nav.uk-navbar-dropdown-nav(v-else)
                        li
                            a(href="#TopHero") {{ $t('header.navi.top.top') }}
                        li
                            a(href="#TopKeynote") {{ $t('header.navi.top.keynote') }}
